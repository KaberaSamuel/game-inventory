<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../../public/styles/general.css" />
    <link rel="stylesheet" href="../../public/styles/updateItem.css" />
  </head>
  <body>
    <%- include('navbar') %>

    <h2>Update item</h2>

    <form
      action="/items/<%=itemName%>/update"
      method="post"
      enctype="multipart/form-data"
    >
      <div>
        <label for="name">Name:</label>
        <input
          type="text"
          name="name"
          value="<%=itemName%>"
          id="name"
          placeholder="Grand Theft Auto, etc."
          required
        />
      </div>

      <div>
        <label for="about">Description:</label>
        <textarea
          name="about"
          value="<%=about%>"
          id="about"
          required
        ></textarea>
      </div>

      <div>
        <p>Categories:</p>
        <div class="categories">
          <% categories.forEach(({name}) => { %>
          <div>
            <input
              type="checkbox"
              id="<%= name %>"
              name="genres"
              value="<%= name %>"
            />
            <label for="<%= name %>"><%= name %></label>
          </div>
          <% }) %>
        </div>
      </div>

      <div>
        <label for="price">Price (in USD):</label>
        <input
          type="number"
          step="0.01"
          name="price"
          value="<%=price%>"
          id="price"
          required
        />
      </div>

      <div>
        <label for="units">Number in stock:</label>
        <input
          type="number"
          name="units"
          value="<%=units%>"
          id="units"
          required
        />
      </div>

      <div>
        <label for="logo">Title logo:</label>
        <input
          type="file"
          name="logo"
          id="logo"
          accept="image/jpeg,image/png"
          required
        />
      </div>

      <div>
        <label for="image">Cover image:</label>
        <input
          type="file"
          name="cover"
          id="image"
          accept="image/jpeg,image/png"
          required
        />
      </div>

      <div>
        <label for="publisher">Publisher:</label>
        <input
          type="text"
          name="publisher"
          value="<%=publisher%>"
          id="publisher"
          placeholder="Riot games, etc."
          required
        />
      </div>

      <div>
        <label for="release_date">Release date:</label>
        <input type="date" name="release_date" id="release_date" required />
      </div>

      <div>
        <label for="rating">Rating (out of 5):</label>
        <input
          type="number"
          step="0.01"
          min="0"
          max="5"
          name="rating"
          value="<%=rating%>"
          id="rating"
          required
        />
      </div>

      <div>
        <button type="submit">Submit</button>
      </div>
    </form>

    <script type="module">
      window.addEventListener("load", () => {
        // default values for item description and release date inputs
        document.querySelector("textarea").value = "<%=about%>";

        document.querySelector("input[name='release_date']").valueAsDate =
          new Date("<%=release_date%>");

        // default values for genres checkbox
        const genreInputs = document.querySelectorAll("input[type='checkbox']");
        const genresArray = "<%=genres%>".split(",");

        genreInputs.forEach((input) => {
          if (genresArray.includes(input.value)) {
            input.checked = true;
          }
        });
      });
    </script>
  </body>
</html>
