<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../public/styles/general.css" />
  </head>
  <body>
    <div>
      <img src="../<%=image%>" alt="cover image" />
    </div>
    <div>
      <h1><%= name %></h1>
      <p><%= description %></p>
    </div>
    <div>
      <h1>Items</h1>
      <div>
        <% items.forEach(({logo}) => { %>
        <div>
          <img src="../<%=logo%>" alt="logo image" />
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
