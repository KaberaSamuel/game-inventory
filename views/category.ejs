<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../public/styles/general.css" />
    <link rel="stylesheet" href="../public/styles/category.css" />
  </head>
  <body>
    <%- include('navbar') %>

    <div class="cover-image">
      <img src="../<%=image%>" alt="cover image" />
    </div>

    <div class="update-element">
      <a href="/categories/<%=name%>/update" class="update">
        <i class="fa-solid fa-pen"></i> update
      </a>

      <a href="/categories/<%=name%>/delete">
        <i class="fa-solid fa-trash-can"></i> delete</a
      >
    </div>

    <div>
      <h1><%= name %></h1>
      <p><%= description %></p>
    </div>

    <div>
      <h1>Items</h1>

      <%- include('itemsComponent', {itemsArray: categoryItems}) %>
    </div>
  </body>
</html>
